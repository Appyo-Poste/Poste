<resources>
    <!-- Base application theme and other styles -->

    <!-- Custom button style -->
    <style name="TealButton" parent="Widget.MaterialComponents.Button">
        <!-- Override attributes here -->
        <item name="backgroundTint">@color/teal_700</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">46dp</item>
        <item name="android:maxHeight">46dp</item>
        <!-- Add rounded corners -->
        <item name="shapeAppearance">@style/RoundedAppearance</item>
    </style>

    <style name="GrayButton" parent="Widget.MaterialComponents.Button">
        <!-- Override attributes here -->
        <item name="backgroundTint">@color/light_grey</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:minHeight">46dp</item>
        <item name="android:maxHeight">46dp</item>
        <!-- Add rounded corners -->
        <item name="shapeAppearance">@style/RoundedAppearance</item>
    </style>

    <style name="RedButton" parent="Widget.MaterialComponents.Button">
        <!-- Override attributes here -->
        <item name="backgroundTint">#B0BC2C2C</item>
        <item name="android:textColor">@color/color4</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">46dp</item>
        <item name="android:maxHeight">46dp</item>
        <!-- Add rounded corners -->
        <item name="shapeAppearance">@style/RoundedAppearance</item>
    </style>

    <!-- Parent style for EditText -->
    <style name="EditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:background">@drawable/edittext_rounded_gray</item>
        <!-- Add any other common attributes here -->

        <!-- You can also reference a text appearance for additional styling -->
        <item name="android:textAppearance">@style/TextAppearance.MyEditText</item>
    </style>

    <!-- TextAppearance for the EditText (optional) -->
    <style name="TextAppearance.MyEditText" parent="@android:style/TextAppearance">
        <!-- Customize text appearance here -->
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item> <!-- Adjust the size as needed -->
        <item name="android:fontFamily">arial</item>
    </style>

    <!-- Custom shape appearance for rounded corners -->
    <style name="RoundedAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Add other styles if needed -->
</resources>
