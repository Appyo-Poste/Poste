<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <queries>
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="https" />
        </intent>
    </queries>

    <application
        android:name=".PosteApplication"
        android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/poste_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Poste"
        tools:targetApi="31">
        <activity
            android:name=".activities.EditFolderActivity"
            android:exported="false" />
        <activity
            android:name=".activities.EditPostActivity"
            android:exported="false" />
        <activity
            android:name=".activities.FolderViewActivity"
            android:exported="false" />
        <activity
            android:name=".activities.TwitterTokenActivity"
            android:exported="true"
            android:label="@string/title_activity_twitter_token"
            android:theme="@style/Theme.Poste.NoActionBar">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="test-project-379806.wl.r.appspot.com"
                    android:pathPrefix="/twitter/auth"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.redditInstructions"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="test-project-379806.wl.r.appspot.com"
                    android:pathPrefix="/reddit/auth"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.OptionsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.Shared_Folder"
            android:exported="false" />
        <activity
            android:name=".activities.IntroActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LinkAccounts"
            android:exported="false" />
        <activity
            android:name=".activities.DashboardActivity"
            android:exported="true" />
        <activity
            android:name=".activities.AccountActivity"
            android:exported="false" />
        <activity
            android:name=".activities.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="true" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.Poste.NoActionBar" />
    </application>

</manifest>